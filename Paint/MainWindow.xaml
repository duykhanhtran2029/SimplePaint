<Window x:Class="Paint.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Paint"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Name="PaintWindow"
        DataContext="{StaticResource MainVM}"
        Title="Simple Paint" Height="600" Width="800">
    <DockPanel 
        x:Name="dpn_Main"
        LastChildFill="True">
        <StackPanel
            DockPanel.Dock="Top"
            Name="spn_Tools" 
            Orientation="Horizontal"
            Background="LightGray"
            Height="50">
            <Button 
                x:Name="btn_Undo"
                Command="{Binding UndoCommand}"
                Content="Undo"/>
            <Button 
                x:Name="btn_Redo"
                Command="{Binding RedoCommand}"
                Content="Redo"/>
            <Button 
                    x:Name="btn_Eraser"
                    Content="Eraser" Click="btn_Eraser_Click"/>
            <Button 
                    x:Name="btn_Shape"
                    Content="Shape" Click="btn_Shape_Click"/>
            <Button 
                    x:Name="btn_Brush"
                    Content="Brush" Click="btn_Brush_Click"/>
            <ComboBox Name="cbx_Sizes"
                          VerticalContentAlignment="Center" 
                          SelectionChanged="cbx_Sizes_SelectionChanged">
                <ComboBoxItem Name="cbi_Small" Content="Small"/>
                <ComboBoxItem Name="cbi_Medium" Content="Medium"/>
                <ComboBoxItem Name="cbi_Large" Content="Large"/>
            </ComboBox>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Label Grid.Row="0" Content="Foreground" />
                <Label Grid.Row="1" Content="Background" />
                <xctk:ColorPicker
                    Grid.Row="0"
                    Grid.Column="1"
                    x:Name="clp_Foreground"
                    Width="50" 
                    SelectedColor="Black"
                    SelectedColorChanged="clp_Foreground_SelectedColorChanged"/>
                <xctk:ColorPicker 
                    Grid.Row="1"
                    Grid.Column="1"
                    x:Name="clp_Background"
                    Width="50"
                    SelectedColor="White"
                    SelectedColorChanged="clp_Background_SelectedColorChanged"
                    />
            </Grid>
            <Button 
                    x:Name="btn_Picture"
                    Content="Picture"/>
            <Button 
                    x:Name="btn_Selection"
                    Content="Selection"/>
        </StackPanel>
        <InkCanvas
            x:Name="icv_Paint"
            MouseMove="icv_Paint_MouseMove"
            Strokes="{Binding InkStrokes, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            Margin="0">
        </InkCanvas>
    </DockPanel>
</Window>
